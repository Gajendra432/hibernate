				<th>ID</th>
				<th>First name</th>
				<th>Last name</th>
				<th>Year level</th>
			</tr>
		<thead>
		<tbody>
			<c:forEach items="${studentList}" var="student">
				<tr>
					<td>${student.studentId}</td>
					<td>${student.firstname}</td>
					<td>${student.lastname}</td>
					<td>${student.yearLevel}</td>
				</tr>
			</c:forEach>
		</tbody>
	</table>
</body>
